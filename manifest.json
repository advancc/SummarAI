{
  "manifest_version": 3,
  "name": "Page Summarizer",
  "version": "1.0.0",
  "homepage_url": "https://zhangferry.com",
  "description": "Page Summarizer provides a brief summary of the content on a website page, specializing in summarizing articles.",
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://gpt-summarizer-5oxqvewo.ew.gateway.dev/"
  ]
}
